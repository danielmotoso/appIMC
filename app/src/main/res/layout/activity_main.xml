<?xml version="1.0" encoding="utf-8"?><!--Layout principal com orientação na vertical -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Peso"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/editPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/campoAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/editAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />
    <!-- Agora na orientação horizontal para deixar os botoes um do lado do outro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Calcular" />

        <Button
            android:id="@+id/btLimpar"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="Limpar" />
    </LinearLayout>

    <!-- Mesma coisa do anterios, ao inves de botoes tem dois campos de texto um do lado do outro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_alignBottom="@+id/ratingBar1"
            android:layout_alignParentLeft="true"
            android:src="@drawable/imc" />
    </LinearLayout>

</LinearLayout>